<h2>Books</h2>
  <div class="row">
    <% @books.each do |book| %>
    <div class="col-md-3" style="padding-top: 10px;">
      <div class="card"> 
        <%= image_tag book.image, class: "card-img-top" %>   
        <div class="card-body">
          <h4 class="card-title"><%= book.name %></h4>
          <p class="card-text">$ <%= book.price %></p>
          <p class="card-text"><%= book.duration %></p>
          <%= link_to 'Book', book_book_path(book), class: "btn btn-primary" %>      
        </div>
      </div>
    </div>
    <br>
    <% end %>
</div>